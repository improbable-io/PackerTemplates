{
  "builders": [
    {
      "boot_command": [
        "a<wait>a<wait>a"
      ],
      "boot_wait": "0s",
      "communicator": "winrm",
      "cpu": 1,
      "disk_size": 81920,
      "floppy_files": [
        "answer_files/{{ user `os_name` }}/Autounattend.xml",
        "floppy/winrm.ps1"
      ],
      "generation": 1,
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `iso_url` }}",
      "output_directory": "./output-{{ user `os_name` }}-base-hyperv/",
      "ram_size": 1024,
      "shutdown_command": "C:/Windows/packer/PackerShutdown.bat",
      "shutdown_timeout": "1h",
      "type": "hyperv-iso",
      "vm_name": "{{ user `os_name` }}-base",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "winrm_username": "vagrant"
    }
  ],
  "post-processors": [
    [
      {
        "keep_input_artifact": false,
        "output": "{{user `os_name`}}-wmf5-nocm-{{.Provider}}.box",
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile-windows.template"
      }
    ]
  ],
  "provisioners": [
    {
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "inline": [
        "$env:chocolateyUseWindowsCompression = 'false'",
        "iwr https://chocolatey.org/install.ps1 -UseBasicParsing | iex"
      ],
      "type": "powershell"
    },
    {
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "script": "scripts/install_windows_updates.ps1",
      "type": "powershell",
      "valid_exit_codes": [
        0,
        1,
        2,
        3,
        5,
        10,
        15
      ]
    },
    {
      "restart_timeout": "1h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "script": "scripts/install_windows_updates.ps1",
      "type": "powershell",
      "valid_exit_codes": [
        0,
        1,
        2,
        3,
        5,
        10,
        15
      ]
    },
    {
      "restart_timeout": "1h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "script": "scripts/install_windows_updates.ps1",
      "type": "powershell",
      "valid_exit_codes": [
        0,
        1,
        2,
        3,
        5,
        10,
        15
      ]
    },
    {
      "restart_timeout": "1h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "script": "scripts/install_ps5.ps1",
      "type": "powershell",
      "valid_exit_codes": [
        0,
        3010
      ]
    },
    {
      "restart_timeout": "1h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "script": "scripts/install_windows_updates.ps1",
      "type": "powershell",
      "valid_exit_codes": [
        0,
        2,
        3,
        5,
        10,
        15
      ]
    },
    {
      "restart_timeout": "1h",
      "type": "windows-restart"
    },
    {
      "elevated_password": "vagrant",
      "elevated_user": "vagrant",
      "script": "scripts/clean_and_scrub.ps1",
      "type": "powershell"
    },
    {
      "script": "scripts/save_shutdown_command.ps1",
      "type": "powershell"
    }
  ],
  "variables": {
    "guest_os_type": "",
    "install_vbox_tools": "",
    "iso_checksum": "",
    "iso_url": "",
    "os_name": ""
  }
}